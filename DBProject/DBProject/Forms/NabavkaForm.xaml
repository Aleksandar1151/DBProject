<UserControl x:Class="DBProject.Forms.NabavkaForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DBProject.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="750">
    <Grid Background="White">
        <Label Content="MATERIJAL ZA NABAVKU" FontSize="20" Foreground="LightGray" FontWeight="Bold"/>
        <ListView x:Name="NabavkaListView" Margin="20">
            <ListView.View>
                <GridView>
                    <GridViewColumn x:Name="Column1" DisplayMemberBinding="{Binding Naziv}" Header="Naziv" Width="200"/>
                    <GridViewColumn x:Name="Column2" DisplayMemberBinding="{Binding Cijena}" Header="Cijena" Width="200"/>
                    <GridViewColumn x:Name="Column3" DisplayMemberBinding="{Binding Kolicina}" Header="Količina" Width="120"/>


                </GridView>
            </ListView.View>

        </ListView>



    </Grid>
</UserControl>
